
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Tech</th>
      <th>Rank</th>
      <th>Last Month</th>
      <th>Change</th>
      <th>Last Year</th>
      <th>Change</th>
    </tr>
  </thead>
  <tbody>
    {% for term in top_terms %}
    <tr>
      <td><a href="?compare1={{ term[0] }}">{{ term[0] }}</td>
      <td>{{ term[1].rank }}</td>
      <td>{{ term[1].rank_last_month }}</td>
      {% if term[1].rank_change_month > 0 %}<td class="positive table-success">+{{ term[1].rank_change_month }}</td>
      {% elsif term[1].rank_change_month < 0 %}<td class="negative table-danger">{{ term[1].rank_change_month }}</td>
      {% else %}<td>{{ term[1].rank_change_month }}</td>{% endif %}
      <td>{{ term[1].rank_last_year }}</td>
      {% if term[1].rank_change_year > 0 %}<td class="positive table-success">+{{ term[1].rank_change_year }}</td>
      {% elsif term[1].rank_change_year < 0 %}<td class="negative table-danger">{{ term[1].rank_change_year }}</td>
      {% else %}<td>{{ term[1].rank_change_year }}</td>{% endif %}
    </tr>
    {% endfor %}
  </tbody>
</table>
